<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="io.netty" level="error"/>
    <logger name="io.rsocket" level="error"/>
    <logger name="reactor" level="error"/>
    <logger name="io.vlingo" level="error"/>
    <logger name="io.vlingo.actors.GridMailbox" level="error"/>
    <logger name="io.vlingo.lattice.grid.GridNode" level="error"/>
    <logger name="io.vlingo.lattice.grid.application.GridApplicationMessageHandler" level="error"/>
    <logger name="io.vlingo.lattice.grid.application.OutboundGridActorControl" level="error"/>
    <logger name="io.vlingo.actors.GridMailbox" level="error"/>

    <root level="error">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>